<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_inser_moto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InsertarMotocicleta">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Insertar motocicleta"
        app:titleMargin="4dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="354dp"
        android:layout_height="293dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_3"
        app:layout_constraintVertical_bias="0.327">

        <LinearLayout
            android:layout_width="87dp"
            android:layout_height="282dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_marca"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Marca:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_modelo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Modelo:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_matri"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Año(1ºMat.):"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kilo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Kilómetros:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_cilin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Cilindrada:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_potencia"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Potencia:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_precio"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Precio:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_vendida"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Vendida:"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="264dp"
            android:layout_height="282dp"
            android:layout_marginBottom="72dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/id_spinner_marca"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_modelo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_anio"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_km"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_cc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_cv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/id_precio"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <CheckBox
                android:id="@+id/id_vendido_check"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:buttonTint="@color/black" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="vol_main"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>